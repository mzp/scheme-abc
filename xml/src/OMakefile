.PHONY: clean

# package
OCAMLPACKS[] =
	extlib
	xml-light
UseCamlp4(pa_oo)

# build
FILES[] =
	abc
	byte
	code
	disasm
	easyXml
	swfmill
	parsec
	code

PROGRAM = habc-xml

OCamlProgram($(PROGRAM), main $(FILES))
OCamlLibrary($(PROGRAM), $(FILES))

# phony
.PHONY: clean
.DEFAULT: $(PROGRAM)$(EXE)
clean:
	ocaml-clean $(PROGRAM)$(EXE)
