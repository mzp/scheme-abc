.PHONY: clean

OCAMLPACKS[] = extlib

UseCamlp4(pa_oo)

FILES[] =
	binding
	main

PROGRAM       = ../lib/checker
OCAMLOPT      = ocamlopt -for-pack $(capitalize $(basename $(PROGRAM)))
OCAMLOPTLINK  = ocamlopt

OCamlPackage($(PROGRAM), $(FILES))
OCamlLibrary(checker, $(FILES))

.DEFAULT: $(PROGRAM).cmo

clean:
	ocaml-clean
