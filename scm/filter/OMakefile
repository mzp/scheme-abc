# build
FILES[] =
	binding
	rename
	main

PROGRAM       = ../filter
OCAMLOPT      = ocamlopt -for-pack $(capitalize $(basename $(PROGRAM)))
OCAMLOPTLINK  = ocamlopt

# test
OUNIT_LIBS+=astUtil
OUnitTest(binding, binding)
OUnitTest(rename, rename)

# phony
.DEFAULT: $(OCamlPackage $(PROGRAM), $(FILES))
.PHONY: clean
clean:
	ocaml-clean



