.PHONY: clean check

SRC=$(absname ../src)

OCAMLPACKS[] =
    str
    oUnit
    extlib

OCAMLINCLUDES += $(ROOT)/base/
OCAML_LIBS    += $(ROOT)/base/base

OCAMLINCLUDES += $(SRC)/type/
OCAML_LIBS    += $(SRC)/type/type


.SUBDIRS: codegen checker type parser

OCAMLINCLUDES += $(SRC)
################################################
# Build an OCaml program
#

FILES[] =
	baseTest
	hListTest
	interCodeTest

PROGRAM = runner
OCAML_LIBS += $(SRC)/habc-scm

OCamlProgram($(PROGRAM), $(FILES))

#############################################################
#
# PHONY Target
#
.DEFAULT: check

check: $(PROGRAM)$(EXE)
	./$(PROGRAM)$(EXE) | ounit-postproc

clean:
	ocaml-clean $(PROGRAM)
