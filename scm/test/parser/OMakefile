.PHONY: clean check


################################################
# Build an OCaml program
#

FILES[] =
	closTest
	lexerTest
	sexpTest
	astUtil
	lispTest

PROGRAM = runner


OCAMLINCLUDES += $(SRC)/parser
OCAML_LIBS    += $(SRC)/parser/parser

OCamlProgram($(PROGRAM), $(FILES))

#############################################################
#
# PHONY Target
#
.DEFAULT: check

check: $(PROGRAM)$(EXE)
	./$(PROGRAM)$(EXE) | ounit-postproc

clean:
	ocaml-clean $(PROGRAM)
