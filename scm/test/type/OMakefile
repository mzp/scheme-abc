.PHONY: clean check


################################################
# Build an OCaml program
#

FILES[] =
	psetTest
	nodeTest

PROGRAM = runner

OCAMLINCLUDES += $(SRC)/type
OCAML_LIBS    += $(SRC)/type/type

OCamlProgram($(PROGRAM), $(FILES))

#############################################################
#
# PHONY Target
#
.DEFAULT: check

check: $(PROGRAM)$(EXE)
	./$(PROGRAM)$(EXE) | ounit-postproc

clean:
	ocaml-clean $(PROGRAM)
