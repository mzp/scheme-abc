# ------------------------------
# BUILD
# ------------------------------
OCAMLPACKS[] =
    oUnit

FILES[] =
	base
	hList
	tuple
	option
LIB = base


# ------------------------------
# test
# ------------------------------
OUnitTest(base,base)
OUnitTest(hList,hList base)
OUnitTest(tuple,tuple base)

# ------------------------------
# PHONY
# ------------------------------
.DEFAULT: $(OCamlLibrary $(LIB), $(FILES))
.PHONY: clean
clean:
	ocaml-clean
